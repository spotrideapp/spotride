<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Simplify tests writing -->
    <suppress checks="LineLength|TypeName|JavadocType|MissingJavadocMethod|AbbreviationAsWordInNameCheck|TypeName|VariableDeclarationUsageDistance|DesignForExtension"
              files="src/test/java"/>

    <!-- Disabled FinalParameters in whole com.spotride -->
    <suppress checks="FinalParameters" files="com/spotride/.*"/>

    <suppress checks="HideUtilityClassConstructor" files=".ApplicationStarter.java"/>
</suppressions>